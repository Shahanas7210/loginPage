<%-include("includes/header")-%>
  <link rel="stylesheet" href="/css/addUser.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <div class="container">
    <div class="title">Registration</div>
    <div class="content">
      <form id="form">
        <div class="user-details">
          <div class="input-box">
            <span class="details">Full Name  <label class="star">*</label> </span>
            <input type="text" id="name1" name="name" placeholder="Enter your name">
            <small></small>
          </div>
          <div class="input-box">
            <span class="details">Username  <label class="star">*</label></span>
            <input type="text" id="username" name="username" placeholder="Enter your username">
            <small></small>
          </div>
          <div class="input-box">
            <span class="details">Email  <label class="star">*</label></span>
            <input type="text" id="email" name="email" placeholder="Enter your email">
            <small></small>
          </div>
          <div class="input-box">
            <span class="details">Phone Number  <label class="star">*</label></span>
            <input type="number" id="phoneNumber" name="phoneNumber" placeholder="Enter your number">
            <small></small>
          </div>
          <div class="input-box">
            <span class="details">Password  <label class="star">*</label></span>
            <input type="password" id="password" placeholder="Enter your password">
            <small></small>
          </div>
          <div class="input-box">
            <span class="details">Confirm Password  <label class="star">*</label></span>
            <input type="password" id="confirmPassword" name="password" placeholder="Confirm your password">
            <small></small>
          </div>
        </div>
        <div class="gender-details">
          <input type="radio" name="gender" value="Male" id="dot-1">
          <input type="radio" name="gender" value="Female" id="dot-2">
          <input type="radio" name="gender" value="PreferNotToSay" id="dot-3">
          <span class="gender-title">Gender  <label class="star">*</label></span>
          <div class="category">
            <label for="dot-1">
              <span class="dot one"></span>
              <span class="gender">Male</span>
            </label>
            <label for="dot-2">
              <span class="dot two"></span>
              <span class="gender">Female</span>
            </label>
            <label for="dot-3">
              <span class="dot three"></span>
              <span class="gender">Prefer not to say</span>
            </label>
          </div>
          <small id="errorGender"></small>
        </div>

        <div class="gender-details">
          <span class="gender-title">Status</span><br>
          <div class="status">


            <div class="inline-block-container">
              <input class="form-check-input" id="isActive" name="isActive" type="checkbox" id="flexCheckChecked" checked>
              <label class="form-check-label" for="flexCheckChecked">Active</label>
            </div>
            <div class="inline-block-container">
              <label class="lbl"  for="UserRoll"> User Roll  <label class="star">*</label></label>
              <select id="userRoll" name="userRoll"  class="form-select" id="UserRoll" name="userRoll">
                <option value="-Select-" selected>-Select-</option>
                <option value="Admin">Admin</option>
                <option value="Staff">Staff</option>
                <option value="Manager">Manager</option>
              </select>
            </div>
            
            
            
          
          </div>

        </div>
        <div class="button">
          <input type="submit" value="Register">

        </div>
      </form>
    </div>
  </div>




  <script type="module" src="/js/addUser.js"> import swal from 'sweetalert';</script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert@2.1.2/dist/sweetalert.min.js"></script>

